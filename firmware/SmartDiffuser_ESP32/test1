// [3] ë©”ì¸ ë£¨í”„
// ============================================================
void loop() {
  esp_task_wdt_reset(); 

  manageWiFi();       
  systemHeartbeat(); 
  handleWebClient(); 
  autoWeatherScheduler();
  pollServer(); // â˜… [ì¶”ê°€ë¨] ì•± ì—°ë™ì„ ìœ„í•´ ì„œë²„ í™•ì¸
  
  if (currentMode == 5) runAutoDemoLoop(); 
  else if (isRunning) {
    runSprayLogic();    
    checkSafety();      
  }
  checkSerialInput(); 
}

