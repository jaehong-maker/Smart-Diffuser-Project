  Serial.printf(C_CYAN "\r\n=== ğŸ•¹ï¸ MAIN MENU (V9.5 Final Fixed) ğŸ•¹ï¸ ===\r\n" C_RESET);
  Serial.printf(" [1] ìˆ˜ë™   [2] ê°ì„±   [3] ë‚ ì”¨\r\n [4] ğŸ› ï¸ ì„¤ì •   [5] âœ¨ ë°ëª¨   [9] ğŸ“Š ëŒ€ì‹œë³´ë“œ\r\n" C_YELLOW "ğŸ‘‰ ëª…ë ¹ ì…ë ¥ >>" C_RESET);
}
