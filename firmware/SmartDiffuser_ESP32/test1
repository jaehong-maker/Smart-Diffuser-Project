// ============================================================
void loop() {
  esp_task_wdt_reset(); 

  manageWiFi();       
  systemHeartbeat(); 
  handleWebClient(); 
  autoWeatherScheduler();
  pollServer(); // â˜… [í•µì‹¬] ì—¬ê¸°ì„œ ì•± ëª…ë ¹ì„ ì£¼ê¸°ì ìœ¼ë¡œ í™•ì¸í•©ë‹ˆë‹¤!
  
  if (currentMode == 5) runAutoDemoLoop(); 
  else if (isRunning) {
    runSprayLogic();    
    checkSafety();      
  }
  checkSerialInput(); 
}

