void loop() {
  esp_task_wdt_reset(); 

  manageWiFi();       
  systemHeartbeat(); 
  handleWebClient(); 
  autoWeatherScheduler();
  pollServer(); 
  monitorWeight(); 
  
  if (currentMode == 5) runAutoDemoLoop(); 
  else if (isRunning) {
    runSprayLogic();    
    checkSafety();      
  }
  checkSerialInput(); 
}

