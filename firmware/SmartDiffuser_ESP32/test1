// ë³€ìˆ˜ ì„¤ì •
unsigned long sprayDuration = 3000; 
const long REST_TIME      = 5000;    
const long MAX_RUN_TIME   = 270000; 
float calibration_factor = 430.0; 
int currentVolume = 20;    
int currentMode = 0;        
bool isRunning = false;    
int activePin = -1;        
bool isSpraying = false;    
String lastWebMessage = "ì‹œìŠ¤í…œ ì¤€ë¹„ ì™„ë£Œ";
String inputBuffer = "";  

// â˜… [í•µì‹¬] í´ë§(ì•± ëª…ë ¹ í™•ì¸) ë³€ìˆ˜
unsigned long lastPollTime = 0;
const unsigned long POLL_INTERVAL = 2000; // 2ì´ˆë§ˆë‹¤ í™•ì¸

// ê¸°íƒ€ íƒ€ì´ë¨¸ ë³€ìˆ˜
int demoStep = 0;
unsigned long prevDemoMillis = 0;
unsigned long prevMotorMillis = 0; 
